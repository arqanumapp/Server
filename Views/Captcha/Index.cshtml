<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>hCaptcha</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-color: #000000;
            color: #ffffff;
        }

        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #121212;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1050;
        }

        .spinner-border {
            color: #f3e63f;
        }

        .logo {
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
        }

        h1 {
            color: #ffffff;
        }

        p {
            color: #cccccc;
        }

        .content {
            display: none;
        }
    </style>
</head>
<body>

    <!-- Preloader -->
    <div id="preloader">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container h-100 d-flex flex-column justify-content-center align-items-center content">
        <img src="~/assets/img/logo.png" alt="Logo" class="logo" />
        <h1 class="mb-2">Arqanum</h1>
        <p class="mb-4">Please confirm that you are human</p>
        <div class="h-captcha" data-sitekey="0a802d00-5970-457a-9b08-abc8a9285cfe" data-callback="onVerify"></div>
    </div>

    <!-- hCaptcha -->
    <script src="https://js.hcaptcha.com/1/api.js" async defer></script>

    <script>
        window.onload = function () {
            const checkExist = setInterval(() => {
                if (typeof hcaptcha !== 'undefined') {
                    clearInterval(checkExist);
                    document.getElementById('preloader').style.display = 'none';
                    document.querySelector('.content').style.display = 'flex';
                }
            }, 100);
        };

        function onVerify(token) {
            if (window.chrome && window.chrome.webview) {
                window.chrome.webview.postMessage(token);
            } else if (window.external && window.external.notify) {
                window.external.notify(token);
            }
        }
    </script>
</body>
</html>
